# SCP MCP Server - Environment Configuration Example
# Copy this file to .env.local and customize for your local development environment
# 
# This file demonstrates how to override the default settings from .env.template
# Only include variables you want to change from the defaults

# =============================================================================
# Quick Start Configuration
# =============================================================================

# Set to development for local work, production for deployment
APP_ENV=development

# Enable debug mode for development
DEBUG=true
VERBOSE_LOGGING=true

# =============================================================================
# AI/ML Model Configuration
# =============================================================================

# HuggingFace Token (required for private models or higher rate limits)
# Get your token from: https://huggingface.co/settings/tokens
# HF_TOKEN=hf_your_token_here

# Use a custom models directory (optional)
# HUGGINGFACE_HUB_CACHE=/path/to/your/models
# TRANSFORMERS_CACHE=/path/to/your/models
# HF_HOME=/path/to/your/models

# Work offline with cached models
# HF_HUB_OFFLINE=true

# =============================================================================
# Database Configuration
# =============================================================================

# Use a different database location for development
# LANCEDB_URI=./data/dev_lancedb

# Keep more versions during development
# LANCEDB_MAX_VERSIONS=50

# =============================================================================
# API Keys (for AI model integration)
# =============================================================================

# OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic API Key (if using Claude models)
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# =============================================================================
# Development Settings
# =============================================================================

# Enable hot reload for development
# HOT_RELOAD=true

# Auto-sync data during development
# AUTO_SYNC_DATA=true

# Use test data instead of full dataset
# TEST_DATA_PATH=./tests/fixtures/small_dataset

# Mock external APIs for faster development
# MOCK_EXTERNAL_APIS=true

# =============================================================================
# Performance Tuning
# =============================================================================

# Increase rate limits for development
# RATE_LIMIT_REQUESTS_PER_SECOND=100

# Adjust batch sizes based on your system
# LANCEDB_BATCH_SIZE=500

# Enable performance profiling
# PROFILE_PERFORMANCE=true

# =============================================================================
# Custom Data Sources
# =============================================================================

# Use a fork or different branch of SCP data
# SCP_DATA_REPO=https://github.com/your-fork/scp-api.git
# SCP_DATA_BRANCH=feature-branch

# Use local data directory for development
# DATA_RAW_DIR=/path/to/local/scp/data
