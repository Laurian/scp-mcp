# SCP MCP Server - Base Environment Configuration Template
# This file contains default values and is committed to version control
# Copy to .env.local for local development overrides

# =============================================================================
# Core Application Settings
# =============================================================================

# Application Environment (development, staging, production)
APP_ENV=development

# Server Configuration
MCP_HOST=localhost
MCP_PORT=8000
MCP_TRANSPORT=stdio

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# AI/ML Model Configuration
# =============================================================================

# HuggingFace Models Directory - Local cache for downloaded models
HUGGINGFACE_HUB_CACHE=./models
TRANSFORMERS_CACHE=./models
HF_HOME=./models

# HuggingFace Hub Configuration
# HF_TOKEN=your_token_here  # Uncomment and set for private models

# Model Download Settings
HF_HUB_OFFLINE=false
HF_HUB_DISABLE_PROGRESS_BARS=false

# =============================================================================
# Database Configuration
# =============================================================================

# LanceDB Configuration
LANCEDB_URI=./data/lancedb
LANCEDB_TABLE_NAME=items

# Database Performance Settings
LANCEDB_BATCH_SIZE=1000
LANCEDB_MAX_VERSIONS=20

# =============================================================================
# Data Source Configuration
# =============================================================================

# SCP Data Repository
SCP_DATA_REPO=https://github.com/scp-data/scp-api.git
SCP_DATA_BRANCH=main
SCP_DATA_PATH=docs/data/scp

# Data Processing
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
DATA_STAGING_DIR=./data/staging
DATA_ARCHIVE_DIR=./data/archive

# Update Schedule (cron format)
DATA_UPDATE_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# =============================================================================
# Performance & Caching
# =============================================================================

# Cache Configuration
CACHE_DIR=./cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=50
RATE_LIMIT_BURST=100

# =============================================================================
# Security & Authentication
# =============================================================================

# API Keys (set in .env.local)
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here

# CORS Settings
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=*

# =============================================================================
# Content & Licensing
# =============================================================================

# Attribution Settings
ATTRIBUTION_REQUIRED=true
ATTRIBUTION_MIN_CONTENT_LENGTH=100
LICENSE_COMPLIANCE_STRICT=true

# Content Processing
MARKDOWN_GENERATION_ENABLED=true
CONTENT_VALIDATION_STRICT=false

# =============================================================================
# Development & Debugging
# =============================================================================

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false

# Development Tools
HOT_RELOAD=false
AUTO_SYNC_DATA=false

# Testing
TEST_DATA_PATH=./tests/data
MOCK_EXTERNAL_APIS=false
